<UserControl x:Class="GalArc.Models.Formats.Ai6Win.Ai6WinARCPackWidget"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="using:GalArc.I18n"
             xmlns:local="using:GalArc.Models.Formats.Ai6Win"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="local:Ai6WinARCPackOptions"
             mc:Ignorable="d">

    <Design.DataContext>
        <local:Ai6WinARCPackOptions />
    </Design.DataContext>

    <StackPanel Spacing="10">
        <TextBlock VerticalAlignment="Center" Text="{x:Static i:GuiStrings.Version}" />
        <ComboBox Grid.Column="1"
                  HorizontalAlignment="Stretch"
                  ItemsSource="{Binding Versions}"
                  SelectedItem="{Binding Version, Mode=TwoWay}" />
        <CheckBox VerticalAlignment="Center"
                  Content="{x:Static i:GuiStrings.CompressContents}"
                  IsChecked="{Binding CompressContents}"
                  IsVisible="{Binding IsCompressContentsVisible}" />
    </StackPanel>
</UserControl>
