<UserControl x:Class="GalArc.Models.Formats.AdvHD.AdvHDARCPackWidget"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="using:GalArc.I18n"
             xmlns:local="using:GalArc.Models.Formats.AdvHD"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="local:AdvHDARCPackOptions"
             mc:Ignorable="d">

    <Design.DataContext>
        <local:AdvHDARCPackOptions />
    </Design.DataContext>

    <StackPanel Spacing="10">
        <TextBlock Text="{x:Static i:GuiStrings.Version}" />
        <ComboBox HorizontalAlignment="Stretch"
                  ItemsSource="{Binding Versions}"
                  SelectedItem="{Binding Version}" />
        <CheckBox Content="{x:Static i:GuiStrings.EncryptScripts}" IsChecked="{Binding EncryptScripts}" />
    </StackPanel>
</UserControl>
