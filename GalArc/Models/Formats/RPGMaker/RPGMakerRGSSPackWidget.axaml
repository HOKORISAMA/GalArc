<UserControl x:Class="GalArc.Models.Formats.RPGMaker.RPGMakerRGSSPackWidget"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="using:GalArc.I18n"
             xmlns:local="using:GalArc.Models.Formats.RPGMaker"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:DataType="local:RPGMakerRGSSPackOptions"
             mc:Ignorable="d">

    <Design.DataContext>
        <local:RPGMakerRGSSPackOptions />
    </Design.DataContext>

    <StackPanel Spacing="10">
        <TextBlock Text="{x:Static i:GuiStrings.Version}" />
        <ComboBox HorizontalAlignment="Stretch"
                  ItemsSource="{Binding Versions}"
                  SelectedItem="{Binding Version}" />
        <TextBlock Text="{x:Static i:GuiStrings.Seed}" />
        <TextBox HorizontalAlignment="Stretch"
                 Text="{Binding Seed, Mode=TwoWay}"
                 Watermark="Hex String" />
    </StackPanel>
</UserControl>
